@model MessengerUI.Models.ActiveUserModel
@{
    var image = $"/api/Images/{Model.Image}";
    var fullname = Model.Name + " " + Model.Surname;
}
<!-- Main Content -->
<div class="main" data-mobile-height="">

    <!-- Default Page -->
    <div class="chat flex-column justify-content-center text-center">
        <div class="container">

            <div class="avatar avatar-lg mb-5">
                <img class="avatar-img" src="@image" alt="">
            </div>

            <h6>Hey, @fullname!</h6>
            <p>Please select a chat to start messaging.</p>
        </div>
    </div>
    <!-- Default Page -->

</div>
<!-- Main Content -->
