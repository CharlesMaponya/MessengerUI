<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Messenger</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="author" content="Charles Maponya" />
    <meta name="application-name" content="Messenger Chat." />
    <link rel="icon" href="~/images/brand.svg" />
    <link rel="apple-touch-icon" href="~/images/brand.svg" />
    <link rel="apple-touch-startup-image" href="~/images/brand.svg" />
    <link rel="logo" href="~/images/brand.svg" />
    <link rel="shortcut icon" href="~/images/brand.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/template.min.css" />
    <link href="~/css/template.dark.min.css" rel="stylesheet" media="(prefers-color-scheme: dark)" />
    <link href="~/lib/toastr/toastr.min.css" rel="stylesheet" />
</head>
<body>
    <div class="layout">
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.bundle.js" asp-append-version="true"></script>
    <script src="~/js/template.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
